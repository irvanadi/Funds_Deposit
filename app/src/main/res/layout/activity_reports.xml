<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ReportsActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtRingkasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"

        android:text="Ringkasan Transaksi"
        />

    <TextView
        android:id="@+id/txtTrans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Transaksi : "
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/txtRingkasan"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtDebit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/txtTrans"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Pemasukan (Debit) : "/>

    <TextView
        android:id="@+id/txtKredit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pengeluaran (Kredit) : "
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtDebit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtSaldo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Saldo Akhir :"
        app:layout_constraintTop_toBottomOf="@id/txtKredit"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtInputTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtRingkasan"
        android:layout_marginTop="32dp"
        android:text="5"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/txtKredit"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/txtInputDebit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtInputTrans"
        app:layout_constraintStart_toEndOf="@id/txtKredit"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="100000"/>

    <TextView
        android:id="@+id/txtInputKredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        app:layout_constraintStart_toEndOf="@id/txtKredit"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtInputDebit"
        />

    <TextView
        android:id="@+id/txtSaldoAkhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtInputKredit"
        app:layout_constraintStart_toEndOf="@id/txtKredit"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="1000000"
        />

</androidx.constraintlayout.widget.ConstraintLayout>